{
  "name": "message-bird-app",
  "version": "1.0.0",
  "description": "Message Bird Application",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:write": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "start": "rm -rf dist/client && NODE_ENV='production' webpack -p && tsc && node ./dist/server/server.js",
    "prettier": "prettier --write src/**/*.{ts,tsx}",
    "buildserver": "tsc",
    "buildclient": "rm -rf dist/client && NODE_ENV='production' webpack -p",
    "startdev": "node_modules/.bin/webpack-dev-server",
    "client": "rm -rf dist/client && webpack --mode=development && npm run startdev",
    "test": "./node_modules/.bin/jest --no-cache --no-watchman",
    "test:watch": "./node_modules/.bin/jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:github": "gh-pages -d dist"
  },
  "author": "paul.klochkov@gmail.com",
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "ws": "^6.1.2",
    "axios": "^0.18.0",
    "express": "^4.16.4",
    "messagebird": "^2.2.0",
    "moment": "^2.22.2",
    "moment-parseformat": "^3.0.0",
    "nprogress": "^0.2.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-websocket": "^2.0.0",
    "styled-components": "^4.0.2",
    "styled-components-ts": "0.0.14",
    "typescript": "^3.1.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.7",
    "@types/nprogress": "0.0.29",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-router": "^4.4.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.0.3",
    "@types/styled-components": "^4.0.3",
    "@types/ws": "^6.0.1",
    "autoprefixer": "^9.2.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.2.2",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.4.4",
    "nodemon": "^1.18.6",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-custom-media": "^7.0.7",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.2",
    "react-test-renderer": "^16.6.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-import-rules": "^0.3.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typed-css-modules": "^0.3.6",
    "typescript": "^3.1.6",
    "typings-for-css-modules-loader": "^1.7.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.21.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-hot-middleware": "^2.24.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "test/coverage",
    "coverageReporters": [
      "cobertura",
      "html"
    ],
    "collectCoverageFrom": [
      "src/scripts/*.{ts,tsx}",
      "src/scripts/**/*.{ts,tsx}",
      "!src/scripts/*.d.ts",
      "!src/scripts/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/test-shim.js",
      "<rootDir>/test-setup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "<rootDir>/test-preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [
      "^.+\\.(d.ts)$"
    ],
    "testRegex": "(/test/unit/.*|\\.(spec))\\.(ts|tsx|js|jsx)$"
  }
}
