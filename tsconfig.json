{
  "compilerOptions": {
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noEmit": false,
    "outDir": "./dist/",
    "strict": true,
    "preserveConstEnums": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "types": ["jquery", "node"]
  },
  "include": [
    "./src/scripts/server/index.ts",
    "./src/scripts/client/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.js"
  ]
}
